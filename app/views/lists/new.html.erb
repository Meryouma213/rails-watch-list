<h1>New List</h1>

<%= simple_form_for @list, class: 'form-horizontal' do |f| %>
  <div class="form-inputs">
    <%= f.input :name, label: 'Name', class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Create List', class: 'btn btn-primary' %>
    <%= link_to 'Back to all lists', lists_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
